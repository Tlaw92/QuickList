@model IEnumerable<QuickList.Models.GroceryList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create new Grocery List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShopperId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedTotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealTotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShopperId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedTotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealTotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GroceryListId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GroceryListId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GroceryListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
