@model QuickList.Models.GroceryList

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>GroceryList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroceryListId" />
            <div class="form-group">
                <label asp-for="ShopperId" class="control-label"></label>
                <input asp-for="ShopperId" class="form-control" />
                <span asp-validation-for="ShopperId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedTotalCost" class="control-label"></label>
                <input asp-for="EstimatedTotalCost" class="form-control" />
                <span asp-validation-for="EstimatedTotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealTotalCost" class="control-label"></label>
                <input asp-for="RealTotalCost" class="form-control" />
                <span asp-validation-for="RealTotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreName" class="control-label"></label>
                <input asp-for="StoreName" class="form-control" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
